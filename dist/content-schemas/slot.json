{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "$id": "https://amplience.com/composablecommerce/slot.json",
  "title": "Slot",
  "description": "Slot accelerator",
  "type": "object",
  "properties": {
    "_meta": {
      "type": "object",
      "properties": {
        "deliveryKey": {
          "type": "string",
          "title": "Delivery key",
          "description": "Enter the delivery key for this item"
        }
      }
    },
    "content": {
      "type": "array",
      "items": {
        "allOf": [
          {
            "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
          },
          {
            "properties": {
              "contentType": {
                "enum": [
                  "https://amplience.com/composablecommerce/page.json",
                  "https://amplience.com/composablecommerce/advanced-banner.json",
                  "https://amplience.com/composablecommerce/simple-banner.json",
                  "https://amplience.com/composablecommerce/simple-image-banner.json",
                  "https://amplience.com/composablecommerce/slider.json",
                  "https://amplience.com/composablecommerce/split-block.json",
                  "https://amplience.com/composablecommerce/card.json",
                  "https://amplience.com/composablecommerce/card-list.json",
                  "https://amplience.com/composablecommerce/image.json",
                  "https://amplience.com/composablecommerce/rich-text.json",
                  "https://amplience.com/composablecommerce/curated-product-list.json",
                  "https://amplience.com/composablecommerce/video.json",
                  "https://amplience.com/composablecommerce/blog-list.json",
                  "https://amplience.com/composablecommerce/external-block.json"
                ]
              }
            }
          }
        ]
      },
      "title": "Content"
    }
  },
  "propertyOrder": ["_meta", "content"]
}
