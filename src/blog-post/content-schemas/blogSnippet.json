{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "{CONTENT_TYPE_BASEPATH}/blogSnippet.json",
  "title": "Blog Snippet",
  "description": "Key information for indexing and displaying a blog post",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
    "image": {
      "type": "object",
      "title": "Image",
      "description": "Image to show in the snippet",
      "allOf": [
        {
          "$ref": "{CONTENT_TYPE_BASEPATH}/image.json"
        }
      ]
    },
    "title": {
      "type": "string",
      "title": "Title",
      "description": "Blog post title",
      "validation": "Please enter less than 255 characters",
      "minLength": 0,
      "maxLength": 255
    },
    "description": {
      "type": "string",
      "title": "Snippet Description",
      "description": "Blog post description",
      "validation": "Please enter less than 500 characters",
      "minLength": 0,
      "maxLength": 500
    },
    "category": {
      "type": "array",
      "title": "Category",
      "description": "The name of the category this relates too",
      "items": {
        "type": "string",
        "enum": [
          "Frauen",
          "MÃ¤nner",
          "Marken",
          "Premium",
          "Uhren",
          "Schmuck"
        ]
      }
    },
    "keywords": {
      "type": "array",
      "title": "Keywords",
      "description": "Keywords",
      "validation": "",
      "items": {
        "type": "string",
        "title": "label",
        "description": "keyword",
        "validation": "keyword",
        "minLength": 0,
        "maxLength": 500
      },
      "minItems": 0,
      "maxItems": 50
    },
    "author": {
      "type": "string",
      "title": "Author",
      "description": "The author of the post",
      "enum": [
        "Hazel Nutkins",
        "Macadamia Smith",
        "Sally Almond",
        "Desmond Cobnut",
        "Jose Pistachio"
      ]
    },
    "blogdate": {
      "type": "string",
      "title": "Creation Date",
      "description": "Enter date (yyyy/mm/dd) that blog is created",
      "validation": "YYYY/MM/DD",
      "format": "text",
      "minLength": 0,
      "maxLength": 10
    }
  },
  "propertyOrder": [
    "blogdate",
    "category",
    "image",
    "title",
    "description",
    "cta",
    "keywords",
    "author"
  ]
}
